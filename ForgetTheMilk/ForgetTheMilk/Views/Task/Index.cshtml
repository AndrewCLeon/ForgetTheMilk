@using ForgetTheMilk.Models
@model List<Task>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p>Add a task:</p>
    <form action="@Url.Action("Add")" method="post">
        <input type="text" class="input-lg col-xs-12" name="task" autofocus/>
    </form>
</div>
<h2>@Model.Count Task(s)</h2>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Due Date</th>
            <th>Link</th>
            <th>Priority</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Task task in Model)
        {
            <tr>
                <td>
                    @task.Description
                </td>
                <td>
                    @(task.DueDate.HasValue ? task.DueDate.Value.ToShortDateString() : "")
                </td>
                <td>
                    @task.Link
                </td>
                <td>
                    @task.Priority
                </td>
            </tr>
        }
    </tbody>
</table>